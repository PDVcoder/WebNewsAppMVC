@model NewsWebApp.PL.Models.NewsViewModel

@{
    ViewBag.Title = "ViewNews";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>View</title>
</head>

<body>
    <h2 CENTER>Heading - @Html.DisplayFor(model => model.Heading.Name) </h2>

    <h2 CENTER>@Html.DisplayFor(model => model.NewsName)     ------------------    Author - @Html.DisplayFor(model => model.Author.Firstname)  @Html.DisplayFor(model => model.Author.Lastname)</h2>

    <h4 RIGHT>@Html.DisplayFor(model => model.PublishDate)</h4>

    <p>@Html.DisplayFor(model => model.NewsText)</p>
</body>

</html>
